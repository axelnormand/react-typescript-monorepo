{
  "compilerOptions": {
    "composite": true, 
    "lib": ["dom", "esnext"],
    "target": "esnext",
    "moduleResolution": "node",
    "module": "commonjs",
    "jsx": "react", 
    "esModuleInterop": true, 
    "allowSyntheticDefaultImports": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "strictNullChecks": true,
    "experimentalDecorators": true,
    "preserveConstEnums": true,
    "allowJs": false,
    "strict": true,
    "alwaysStrict": true,
    "pretty": true,
    "sourceMap": true,
    "declaration": true, 
    "declarationMap": true, 
    "noEmit": false, 
    "noEmitHelpers": true, 
    "importHelpers": true
  },
  "exclude": ["**/dist", "node_modules", "**/*.test.ts*", "**/*.story.ts*"],
  "compileOnSave": true
}
